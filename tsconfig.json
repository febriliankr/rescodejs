        "target": "es5",
        "lib": [
            "DOM",
            "es2016"
        ],
        "outDir": "bin",
        "module": "commonjs",
        "removeComments": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types/"
        ],
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}